<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pest_Out_App.Views.TestResult"
             BackgroundColor="White"
             Title="Test Result">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Your Test Is Positive" 
                   BackgroundColor="Red"
                   TextColor="White"
                   VerticalOptions="FillAndExpand"/>

            <Button Text="Report Result" 
                    BackgroundColor="Red"
                    VerticalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>